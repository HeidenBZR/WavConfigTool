<UserControl
    x:Class="WavConfigTool.UserControls.WavZone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WavConfigTool.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <d:UserControl.DataContext>
        <local:WavZone />
    </d:UserControl.DataContext>

    <Canvas>
        <Canvas
            Canvas.Left="{Binding In, FallbackValue=0}"
            Width="{Binding Out, FallbackValue=0}"
            Height="100"
            Background="{Binding BackgroundBrush, FallbackValue=#22EE2222}" />
    </Canvas>
</UserControl>
