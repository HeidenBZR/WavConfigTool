<local:WavControlBase
    x:Class="WavConfigTool.UserControls.WavControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:WavConfigTool.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WavConfigTool.ViewModels"
    xmlns:vt="clr-namespace:WavConfigTool.ViewTools"
    Height="100"
    Margin="0,10,0,10"
    Background="{DynamicResource WavControlBackgroundBrush}"
    Focusable="False"
    mc:Ignorable="d">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="{Binding Width, FallbackValue=1000}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DisabledProperty}" Value="True">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Width" Value="Auto" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand
            Command="{Binding WavControlClickCommand}"
            EventName="MouseLeftButtonDown"
            ModifierKeys="{x:Null}"
            PassEventArgsToCommand="True">
            <dxmvvm:EventToCommand.EventArgsConverter>
                <vt:MouseButtonToPointConverter />
            </dxmvvm:EventToCommand.EventArgsConverter>
        </dxmvvm:EventToCommand>
        <dxmvvm:EventToCommand Command="{Binding OtoModeCommand}" 
            EventName="MouseLeftButtonDown" ModifierKeys="Alt" />
    </dxmvvm:Interaction.Behaviors>
    <d:UserControl.DataContext>
        <vm:WavControlViewModel />
    </d:UserControl.DataContext>
    <Grid Name="Main">
        <Border
            Name="WavCompleted"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#0710FF22"
            BorderBrush="#FF159B00"
            BorderThickness="0,1,0,1">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompleted, TargetNullValue=False}" Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>

        <Rectangle
            Height="1"
            HorizontalAlignment="Stretch"
            Fill="{DynamicResource WaveformBrush}"
            SnapsToDevicePixels="True"
            Visibility="{Binding EnabledProperty}" />
        <local:CanvasLoading
            x:Name="CanvasLoading"
            HorizontalAlignment="Stretch"
            Visibility="{Binding LoadingProperty}" />
        <Canvas
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#22FF2222"
            Visibility="{Binding DisabledProperty, TargetNullValue=Hidden}">
            <TextBlock
                Margin="20,40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="{DynamicResource RestBackBrush}"
                Text="Sample is not avialable" />
        </Canvas>
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image
                Name="WavImage"
                Height="100"
                HorizontalAlignment="Left"
                Source="{Binding WavImage}" />
        </Canvas>
        <ItemsControl
            Name="ConsonantZones"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavZoneItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding ConsonantZones, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
        <ItemsControl
            Name="VowelZones"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavZoneItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding VowelZones, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
        <ItemsControl
            Name="RestZones"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavZoneItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding RestZones, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid
                Canvas.Left="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=HorizontalOffset}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <Rectangle
                    Fill="{DynamicResource {x:Static SystemColors.ControlBrush}}"
                    Opacity="0.8"
                    Stroke="{DynamicResource {x:Static SystemColors.ActiveBorderBrush}}" />
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock Margin="0" Text="{Binding Number}" />
                    <TextBlock Margin="0" Text=". " />
                    <TextBlock Margin="0,0,5,0" Text="{Binding Filename}">

                        <TextBlock.ContextMenu>
                            <ContextMenu Name="WavContextMenu">
                                <MenuItem Header="Сбросить все маркеры в текущем аудио" Tag="All" />
                                <Separator />
                                <MenuItem Header="Сбросить все маркеры гласных (V) в текущем аудио" Tag="V" />
                                <MenuItem Header="Сбросить все маркеры согласных (C) в текущем аудио" Tag="C" />
                                <MenuItem Header="Сбросить все маркеры области данных (D) в текущем аудио" Tag="D" />
                                <Separator />
                                <MenuItem Header="Предпросмотр oto.ini" />
                            </ContextMenu>
                        </TextBlock.ContextMenu>
                    </TextBlock>
                    <ListView ItemsSource="{Binding Phonemes}" Style="{DynamicResource ListViewPhonemes}">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
        </Canvas>
        <ItemsControl
            Name="ConsonantPoints"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavPointItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding ConsonantPoints, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
        <ItemsControl
            Name="VowelPoints"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavPointItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding VowelPoints, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
        <ItemsControl
            Name="RestPoints"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemTemplate="{DynamicResource WavPointItemsConrolItem}"
            ItemsPanel="{DynamicResource DataPointItemsPanelTemplate}"
            ItemsSource="{Binding RestPoints, Mode=OneWay}"
            Visibility="{Binding EnabledProperty}" />
    </Grid>
</local:WavControlBase>
