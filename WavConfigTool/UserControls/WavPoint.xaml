<UserControl
    x:Class="WavConfigTool.UserControls.WavPoint"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WavConfigTool.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="50"
    Height="100"
    d:DesignHeight="100"
    d:DesignWidth="80"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <!--<d:UserControl.DataContext>
        <local:WavPoint />
    </d:UserControl.DataContext>-->
    <Canvas>
        <Canvas
            Name="Grid"
            Canvas.Left="{Binding Position, FallbackValue=0}"
            Height="100"
            VerticalAlignment="Stretch">
            <Canvas.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1" />
            </Canvas.Effect>
            <Thumb
                Canvas.Left="-1"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Cursor="SizeWE">
                <Thumb.Template>
                    <ControlTemplate>

                        <Rectangle
                            Name="Line"
                            Width="2"
                            Height="100"
                            Fill="{Binding BorderBrush, FallbackValue=Black}" />
                    </ControlTemplate>
                </Thumb.Template>
            </Thumb>
            <Grid Height="100" VerticalAlignment="Stretch">
                <Thumb
                    Name="ControllerTop"
                    Width="15"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="{Binding BackgroundBrush, FallbackValue=Red}"
                    BorderBrush="{Binding BorderBrush, FallbackValue=Black}"
                    Cursor="Hand"
                    Style="{DynamicResource WavPointControllerStyle}" />
                <TextBlock
                    Name="TypeLabel"
                    Margin="7,0,0,-15"
                    Padding="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="5"
                    FontFamily="Century Gothic"
                    FontSize="14"
                    Foreground="{DynamicResource ForeBrush}"
                    Text="{Binding Text, FallbackValue=Text}" />
                <Thumb
                    Name="ControllerBottom"
                    Width="15"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Background="{Binding BackgroundBrush, FallbackValue=Red}"
                    BorderBrush="{Binding BorderBrush, FallbackValue=Black}"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Style="{DynamicResource WavPointControllerStyle}">
                    <Thumb.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="180" />
                            <TranslateTransform X="-15" />
                        </TransformGroup>
                    </Thumb.RenderTransform>
                </Thumb>

            </Grid>
        </Canvas>
    </Canvas>
</UserControl>
