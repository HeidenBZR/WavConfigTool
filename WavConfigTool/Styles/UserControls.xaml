<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WavConfigTool.Styles">

    <Style x:Key="WavPointControllerStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Canvas>
                        <Rectangle
                            Name="Line"
                            Width="2"
                            Height="100"
                            Fill="{Binding BorderBrush, FallbackValue=Black}" />
                        <Grid
                            Canvas.Left="1"
                            Height="100"
                            VerticalAlignment="Stretch">
                            <Polygon Fill="{Binding BackgroundBrush, FallbackValue=Red}" Stroke="{Binding BorderBrush, FallbackValue=Black}">
                                <Polygon.Points>
                                    <Point X="-6" Y="0" />
                                    <Point X="6" Y="0" />
                                    <Point X="0" Y="6" />
                                </Polygon.Points>
                            </Polygon>
                            <Polygon
                                Name="ControllerBottom"
                                Width="15"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Cursor="Hand"
                                Fill="{Binding BackgroundBrush, FallbackValue=Red}"
                                RenderTransformOrigin="0.5,0.5"
                                Stroke="{Binding BorderBrush, FallbackValue=Black}">
                                <Polygon.Points>
                                    <Point X="-6" Y="0" />
                                    <Point X="6" Y="0" />
                                    <Point X="0" Y="-6" />
                                </Polygon.Points>
                            </Polygon>
                        </Grid>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WavMarkerControllerStyleClosed" TargetType="{x:Type Thumb}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4,0,0,0" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>