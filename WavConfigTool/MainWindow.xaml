<Window
    x:Class="WavConfigTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WavConfigTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1300"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="60" />
            <RowDefinition Height="337*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="3" Fill="#101030" />
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Name="MenuFile" Header="File">
                <MenuItem
                    Name="MenuSave"
                    Click="MenuSave_Click"
                    Header="Save WavConfig" />
                <MenuItem
                    Name="MenuOpen"
                    Click="MenuOpen_Click"
                    Header="Open WavConfig" />
                <MenuItem Name="MenuLocate" Header="Locate Voicebank Folder" />
            </MenuItem>
            <MenuItem Name="MenuOptions" Header="Options" />
            <MenuItem
                Name="MenuGenerate"
                Click="MenuGenerate_Click"
                Header="Generate Oto.ini" />
            <MenuItem Name="MenuHelp" Header="Help" />
        </Menu>
        <StackPanel
            Grid.Row="1"
            Opacity="0.3"
            Orientation="Horizontal">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.006" Color="#FFCFD8D8" />
                    <GradientStop Offset="0.771" Color="#FFFBFBFB" />
                    <GradientStop Offset="1" Color="#FFEFEFEF" />
                </LinearGradientBrush>
            </StackPanel.Background>
            <StackPanel Height="50" Margin="5">
                <Label
                    Padding="0"
                    HorizontalAlignment="Center"
                    Content="Zones" />
                <StackPanel
                    Height="20"
                    Margin="10"
                    Orientation="Horizontal">
                    <Button Content="D" />
                    <Button Content="V" />
                    <Button Content="C" />
                    <Button Margin="20,0,0,0" Content="⇔" />
                    <Button Content="❌" />
                    <Button Content="👆" />
                </StackPanel>
            </StackPanel>
            <StackPanel Height="50" Margin="5">
                <Label
                    Padding="0"
                    HorizontalAlignment="Center"
                    Content="Pages" />
                <StackPanel
                    Height="20"
                    Margin="10"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button Content="˂" />
                    <Label
                        Name="LabelPage"
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="00" />
                    <Label
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="/" />
                    <Label
                        Name="LabelPageTotal"
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="00" />
                    <Button Content="˃" />
                </StackPanel>
            </StackPanel>
            <StackPanel Height="50" Margin="5">
                <Label
                    Padding="0"
                    HorizontalAlignment="Center"
                    Content="BGM" />
                <CheckBox Name="CheckShowGrid" Content="Show grid" />
                <StackPanel
                    Height="20"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="Tempo: " />
                    <TextBox
                        Name="TextBoxTempo"
                        Padding="0"
                        VerticalAlignment="Center"
                        Text="120" />
                    <TextBox
                        Name="TextBoxBars"
                        Margin="10,0,0,0"
                        Padding="0"
                        VerticalAlignment="Center"
                        Text="3" />
                    <Label
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="/4" />
                    <Label
                        Margin="10,0,0,0"
                        Padding="0"
                        VerticalAlignment="Center"
                        Content="Offset: " />
                    <TextBox
                        Name="TextBoxOffset"
                        Padding="0"
                        VerticalAlignment="Center"
                        Text="100" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <ScrollViewer
            Name="ScrollViewer"
            Grid.Row="2"
            Margin="5"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Name="WaveControlStackPanel" />
        </ScrollViewer>

    </Grid>
</Window>
