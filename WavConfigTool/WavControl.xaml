<UserControl
    x:Class="WavConfigTool.WavControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WavConfigTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="800"
    KeyDown="UserControl_KeyDown"
    mc:Ignorable="d">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Name="MenuItemReset"
                    Click="WavControl_Reset"
                    Header="Reset all points (Ctrl+R)" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Label
            Name="LabelName"
            Margin="0,0,0,0"
            Foreground="#BBBBFF" />
        <Canvas
            Name="WavCanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <Canvas
            Name="GridCanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <Canvas
            Name="MarkerCanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <Canvas
            Name="AreasCanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
    </Grid>
</UserControl>
